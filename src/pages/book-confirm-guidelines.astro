---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Book a Campsite - Confirm Guidelines";
---

<BaseLayout pageTitle={pageTitle}>
  <section id="step1-confirm-guidelines">
    <h2>Confirm Guidelines</h2>
    <div>
      <h3>UO1</h3>
      <button>Edit <!-- insert edit icon here --></button>
    </div>
    <div>
      <p><!-- insert moon icon here -->1 Night</p>
      <ul>
        <li>
          <h4>Check-in:</h4>
          <p>Sun, Aug 10 After 3:00pm</p>
        </li>
        <li>
          <h4>Check-out:</h4>
          <p>Mon, Aug 11 After 11:00am</p>
        </li>
        <li>
          <h4>Party-Size</h4>
          <p>1</p>
        </li>
        <li>
          <h4>Equipment</h4>
          <p>Small Tent</p>
        </li>
      </ul>
    </div>
    <table border="1">
      <thead>
        <tr>
          <th>Rate</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>U-Camp 1night @30.00</td>
          <td>$30.00</td>
        </tr>
        <tr>
          <td>Booking Fee (15.00)</td>
          <td>$15.00</td>
        </tr>
      </tbody>
    </table>
    <input type="checkbox" id="guidelines" name="guidelines" required />
    <label for="guidelines"
      >I have read and agree to the campgroundâ€™s <a
        href="/rules_guidelines#cancellation-policy ">policy</a
      > and that I will adhere to all applicable <a
        href="/rules_guidelines#campsite-guidelines">UMA guidelines.</a
      >.</label
    >
    <a href="#step2-order-summary">Confirm Reservation</a>
  </section>
  <section id="step2-order-summary">
    <h2>Summary</h2>
       <div>
      <h3>UO1</h3>
    </div>
    <div>
      <p><!-- insert moon icon here -->1 Night</p>
      <ul>
        <li>
          <h4>Check-in:</h4>
          <p>Sun, Aug 10 After 3:00pm</p>
        </li>
        <li>
          <h4>Check-out:</h4>
          <p>Mon, Aug 11 After 11:00am</p>
        </li>
        <li>
          <h4>Party-Size</h4>
          <p>1</p>
        </li>
        <li>
          <h4>Equipment</h4>
          <p>Small Tent</p>
        </li>
      </ul>
    </div>
    <table border="1">
      <thead>
        <tr>
          <th>Rate</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>U-Camp 1night @30.00</td>
          <td>$30.00</td>
        </tr>
        <tr>
          <td>Booking Fee (15.00)</td>
          <td>$15.00</td>
        </tr>
        <tr>
          <td>Total</td>
          <td>$45.00</td>
        </tr>
      </tbody>
    </table>
    <a href="#step3-checkout">Proceed to Checkout</a>
    <small>Cancel 48+ hours before arrival for a full refund (minus the booking fee).</small>
  </section>
  <section id="step3-checkout">
    <h2>Checkout</h2>
    <form>
      <fieldset>
        <legend>Personal Information</legend>
        <label for="name">Full Name:</label>
        <input type="text" id="name" name="name" required />
        <label for="email-address">Email Address:</label>
        <input type="email" id="email-address" name="email-address" required />
        <label for="phone-number">Phone Number:</label>
        <input type="tel" id="phone-number" name="phone-number" required /> 
        <label for="address">Address:</label>
        <input type="text" id="address" name="address" required />
        <label for="city">City:</label>
        <input type="text" id="city" name="city" required />
        <label for="province">Province:</label>
        <input type="text" id="province" name="province" required />
        <label for="postal-code">Postal Code:</label>
        <input type="text" id="postal-code" name="postal-code" required />  
        <label for="country">Country:</label>
        <input type="text" id="country" name="country" required />
      </fieldset>
      <fieldset>
        <legend>Payment Information</legend>
        <label for="cardholder-name">Name on Card:</label>
        <input type="text" id="cardholder-name" name="cardholder-name" required />
        <label for="card-number">Card Number:</label>
        <input type="text" id="card-number" name="card-number" required />
        <label for="expiry-date">Expiry Date:</label>
        <div class="expiry-group">
          <input
            type="text"
            id="expiry-month"
            inputmode="numeric"
            pattern="\d{2}"
            maxlength="2"
            placeholder="MM"
            aria-label="Expiry month (MM)"
          />
          <span class="expiry-slash" aria-hidden="true">/</span>
          <input
            type="text"
            id="expiry-year"
            inputmode="numeric"
            pattern="\d{2}"
            maxlength="2"
            placeholder="YY"
            aria-label="Expiry year (YY)"
          />
          <input type="hidden" id="expiry-date" name="expiry-date" />
        </div>
        <label for="cvv">CVV:</label>
        <input type="text" id="cvv" name="cvv" required />
      </fieldset>
      <button type="submit">Pay <!-- Whatever the total price is  --></button>
    </form>
  </section>
</BaseLayout>
